{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["lib/", "supabase/functions/", "tests/", "scripts/"],
    "exclude": ["node_modules/", "supabase/.temp/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["lib/", "supabase/functions/", "tests/", "scripts/"],
    "exclude": ["node_modules/", "supabase/.temp/"]
  },
  "test": {
    "include": ["tests/**/*.test.ts"],
    "exclude": ["node_modules/", "supabase/.temp/"]
  },
  "tasks": {
    "test": "deno test --allow-all --coverage=coverage",
    "test:unit": "deno test --allow-all tests/unit/",
    "test:integration": "deno test --allow-all tests/integration/",
    "coverage": "deno coverage coverage --lcov > coverage.lcov",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "imports": {
    "@std/assert": "https://deno.land/std@0.208.0/assert/mod.ts",
    "@std/testing": "https://deno.land/std@0.208.0/testing/mod.ts",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.38.4",
    "ethers": "https://esm.sh/ethers@6.9.0"
  }
}
