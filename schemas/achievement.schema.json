{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://desert-tech-festival.org/schemas/achievement.json",
  "title": "Achievement",
  "description": "Schema for achievement definitions",
  "type": "object",
  "required": ["name", "description", "category_id", "requirements"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Achievement name"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "What the user must do to earn this"
    },
    "category_id": {
      "type": "string",
      "format": "uuid",
      "description": "Achievement category"
    },
    "creator_id": {
      "type": "string",
      "format": "uuid",
      "description": "User who created this achievement"
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Version number (incremented on changes)"
    },
    "requirements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["activity_type"],
        "properties": {
          "activity_type": {
            "type": "string",
            "description": "Type of activity required"
          },
          "count": {
            "type": "integer",
            "minimum": 1,
            "description": "Number of activities required"
          },
          "consecutive_days": {
            "type": "integer",
            "minimum": 1,
            "description": "Number of consecutive days required"
          },
          "conditions": {
            "type": "object",
            "description": "Additional conditions that must be met",
            "additionalProperties": true
          },
          "aggregate": {
            "type": "string",
            "enum": ["sum", "average", "max", "min"],
            "description": "Aggregation function for numeric values"
          },
          "field": {
            "type": "string",
            "description": "Field to aggregate"
          },
          "target": {
            "type": "number",
            "description": "Target value for aggregation"
          }
        }
      }
    },
    "verification_logic_ref": {
      "type": "string",
      "description": "Reference to verification function"
    },
    "reward_data": {
      "type": "object",
      "description": "Rewards granted upon achievement",
      "properties": {
        "badge_url": {
          "type": "string",
          "format": "uri"
        },
        "points": {
          "type": "integer",
          "minimum": 0
        },
        "certificate": {
          "type": "boolean"
        },
        "access_grant": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "visibility": {
      "type": "string",
      "enum": ["public", "community", "private"],
      "default": "public"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time",
      "description": "When achievement expires (null for permanent)"
    }
  }
}
