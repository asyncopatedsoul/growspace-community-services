{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://desert-tech-festival.org/schemas/user-profile.json",
  "title": "UserProfile",
  "description": "Schema for user profile data",
  "type": "object",
  "required": ["id", "username"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30,
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "display_name": {
      "type": "string",
      "maxLength": 100
    },
    "avatar_url": {
      "type": "string",
      "format": "uri"
    },
    "bio": {
      "type": "string",
      "maxLength": 500
    },
    "role": {
      "type": "string",
      "enum": ["user", "instructor", "admin"],
      "default": "user"
    },
    "notification_preferences": {
      "type": "object",
      "properties": {
        "email_enabled": {
          "type": "boolean",
          "default": true
        },
        "sms_enabled": {
          "type": "boolean",
          "default": false
        },
        "achievement_notifications": {
          "type": "boolean",
          "default": true
        },
        "milestone_reminders": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "integrations": {
      "type": "object",
      "properties": {
        "github_username": {
          "type": "string"
        },
        "device_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
